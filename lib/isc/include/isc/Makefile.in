
srcdir =	@srcdir@
VPATH =		@srcdir@
top_srcdir =	@top_srcdir@

@BIND9_VERSION@

HEADERS =	assertions.h boolean.h buffer.h error.h event.h heap.h \
		int.h lang.h lex.h list.h mem.h rbtgen.h region.h result.h \
		rwlock.h socket.h str.h task.h timer.h types.h

SUBDIRS =
TARGETS =

@BIND9_MAKE_RULES@

installdirs:
	if [ ! -d ${includedir} ]; then \
		mkdir ${includedir} ; \
	fi
	if [ ! -d ${includedir}/isc ]; then \
		mkdir ${includedir}/isc ; \
	fi

install:: installdirs
	for i in ${HEADERS}; do \
		${INSTALL_DATA} $(srcdir)/$$i ${includedir}/isc ; \
	done
