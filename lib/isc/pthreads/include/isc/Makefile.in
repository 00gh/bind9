
@BIND9_VERSION@

HEADERS =	condition.h mutex.h thread.h

SUBDIRS =
TARGETS =

@BIND9_MAKE_RULES@

installdirs:
	if [ ! -d ${includedir} ]; then \
		mkdir ${includedir} ; \
	fi
	if [ ! -d ${includedir}/isc ]; then \
		mkdir ${includedir}/isc ; \
	fi

install:: installdirs
	for i in ${HEADERS}; do \
		${INSTALL_DATA} $(srcdir)/$$i ${includedir}/isc ; \
	done
