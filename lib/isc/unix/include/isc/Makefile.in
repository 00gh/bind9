
srcdir =	@srcdir@
VPATH =		@srcdir@
top_srcdir =	@top_srcdir@

@BIND9_VERSION@

HEADERS =	sockaddr.h time.h

SUBDIRS =
TARGETS =

@BIND9_MAKE_RULES@

installdirs:
	if [ ! -d ${includedir} ]; then \
		mkdir ${includedir} ; \
	fi
	if [ ! -d ${includedir}/isc ]; then \
		mkdir ${includedir}/isc ; \
	fi

install:: installdirs
	for i in ${HEADERS}; do \
		${INSTALL_DATA} $(srcdir)/$$i ${includedir}/isc ; \
	done
