srcdir =	@srcdir@
VPATH =		@srcdir@
top_srcdir =	@top_srcdir@

@BIND9_VERSION@

HEADERS =	adb.h callbacks.h cert.h compress.h db.h dbiterator.h dbtable.h \
		dnssec.h events.h dispatch.h events.h fixedname.h keyvalues.h \
		lib.h master.h masterdump.h message.h name.h ncache.h rbt.h \
		rcode.h rdata.h rdataclass.h rdatalist.h rdataset.h \
		rdatasetiter.h rdataslab.h rdatatype.h result.h \
		secalg.h tcpmsg.h time.h tkey.h tsig.h ttl.h types.h view.h \
		xfrin.h \
		confacl.h confcommon.h confctl.h confctx.h confcache.h \
		confip.h confkeys.h conflog.h conflsn.h confparser.h \
		confresolv.h confrrset.h confserv.h confzone.h

GENHEADERS =	enumclass.h enumtype.h rdatastruct.h

SUBDIRS =	
TARGETS =

@BIND9_MAKE_RULES@

installdirs:
	if [ ! -d ${includedir} ]; then \
		mkdir ${includedir} ; \
	fi
	if [ ! -d ${includedir}/dns ]; then \
		mkdir ${includedir}/dns ; \
	fi

install:: installdirs
	for i in ${HEADERS}; do \
		${INSTALL_DATA} ${srcdir}/$$i ${includedir}/dns ; \
	done
	for i in ${GENHEADERS}; do \
		${INSTALL_DATA} $$i ${includedir}/dns ; \
	done
