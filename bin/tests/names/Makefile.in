srcdir =	@srcdir@
VPATH =		@srcdir@
top_srcdir =	@top_srcdir@

CINCLUDES =	-I${srcdir}/../../../lib/isc/unix/include \
		-I${srcdir}/../../../lib/isc/pthreads/include \
		-I${srcdir}/../../../lib/isc/include \
		-I${srcdir}/../../../lib/dns/include \
		-I${srcdir}/../../../lib/tests/include

CDEFINES =
CWARNINGS =

LIBS =		../../../lib/dns/libdns.a \
		../../../lib/isc/libisc.a \
		../../../lib/tests/libt_api.a \
		@LIBS@

TARGETS =	t_names

@BIND9_MAKE_RULES@

t_names: t_names.o
	${CC} -o $@ t_names.o ${LIBS}

test:
	-@./t_names -c @top_srcdir@/t_config -a >> ../t_journal 2>&1

testhelp:
	@./t_names -h

clean distclean::
	rm -f ${TARGETS}
