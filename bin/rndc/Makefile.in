srcdir =	@srcdir@
VPATH =		@srcdir@
top_srcdir =	@top_srcdir@

@BIND9_VERSION@

@BIND9_INCLUDES@

CINCLUDES =	-I${top_srcdir}/bin/named/include \
		${ISC_INCLUDES} ${ISCCFG_INCLUDES} ${OMAPI_INCLUDES}

CDEFINES =
CWARNINGS =

OMAPILIBS =	../../lib/omapi/libomapi.@A@
ISCCFGLIBS =	../../lib/isccfg/libisccfg.@A@
ISCLIBS =	../../lib/isc/libisc.@A@

OMAPIDEPLIBS =	../../lib/omapi/libomapi.@A@
ISCDEPLIBS =	../../lib/isccfg/libisccfg.@A@
ISCDEPLIBS =	../../lib/isc/libisc.@A@

DEPLIBS =	${OMAPIDEPLIBS} ${ISCCFGLIBS} ${ISCDEPLIBS}

LIBS =		${OMAPILIBS} ${ISCCFGLIBS} ${ISCLIBS} @LIBS@

TARGETS =	rndc

OBJS =		rndc.@O@

SRCS =		rndc.c

MANPAGES =	rndc.8 rndc.conf.5

@BIND9_MAKE_RULES@

rndc.@O@: rndc.c
	${LIBTOOL} ${CC} ${ALL_CFLAGS} -DVERSION=\"${VERSION}\" \
		-DRNDC_SYSCONFDIR=\"${sysconfdir}\" -c ${srcdir}/rndc.c

rndc: ${OBJS} ${DEPLIBS}
	${LIBTOOL} ${PURIFY} ${CC} ${CFLAGS} -o $@ ${OBJS} ${LIBS}

installdirs:
	$(SHELL) ${top_srcdir}/mkinstalldirs ${DESTDIR}${sbindir}
	$(SHELL) ${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man8
	$(SHELL) ${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man5

install:: rndc installdirs
	${LIBTOOL} ${INSTALL_PROGRAM} rndc ${DESTDIR}${sbindir}
	${INSTALL_DATA} rndc.8 ${DESTDIR}${mandir}/man8
	${INSTALL_DATA} rndc.conf.5 ${DESTDIR}${mandir}/man5

clean distclean::
	rm -f ${TARGETS}
